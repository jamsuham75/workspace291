      <p></p>
      <div class = 'container input-group ml-2 my-3'>
        <input class="form-control sword" type = "search" placeholder="검색어 입력">
        <button class = "btn btn-success input-group-append sbtn">검색하기</button>
      </div>
      <table style = "border: 1px solid;" class = "table table-hover table-striped text-center container mt-4">
        <thead>
          <tr>
            <th>제목</th>
            <th>작성일</th>
            <th>삭제</th>
          </tr>
        </thead>
        <tbody>
          <% for(let i = 0; i < data.length; i++){ %>
            <tr>
              <td><a href = "/content/<%= data[i]._id%>"><%= data[i].title %></a></td>
              <td><%= data[i].someDate %></td>
              <td><button class="delete btn btn-outline-danger"
                data-id= <%= data[i]._id %>>삭제</button></td>
            </tr>
          <% } %> 
        </tbody>
      </table>

      <div class="container my-3">
        <button class = 'btn btn-primary enter' style = "float:right">글쓰기</button>
      </div>

      <script src="https://code.jquery.com/jquery-3.7.1.min.js" integrity="sha256-/JqT3SQfawRcv/BIHPThkBvs0OEvtFFmqPF/lYI/Cxo=" crossorigin="anonymous"></script>
      <script>
        $('.delete').click(function(e){
          let sid = e.target.dataset.id;
          let item = $(this);
          console.log(sid);
          $.ajax({
            type : 'post',
            url : '/delete',
            data : { _id : sid}
          }).done(function(result){
            //성공
            // location.reload();
            // location.href = "";
            //location.replace('')
            item.parent('td').parent('tr').remove();

          }).fail(function(xhr, textStatus, errorThrown){
            //실패
            console.log('게시물 삭제 실패');
            console.log(xhr, textStatus, errorThrown);
          })
        })

        $('.enter').click(function(e){
          location.href = '/enter';
        })

        $('.sbtn').click(function(){
          let inputValue = $('.sword').val();
          location.href = '\\search?value=' + inputValue; //"\\search?value=멘붕"
        })

      </script>
  
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
  </body>
</html>