  <body>
    <!-- <link rel = 'stylesheet' href = 'style.css'> -->
    <%- include('menu.html') %>

      <!-- <h1>게시판 데이터 리스트</h1>
      <% for(let i = 0; i < data.length; i++){ %>
        <h3>제목 : <%= data[i].title %></h3>
